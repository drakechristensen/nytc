{
  "name": "NY Times Cleanup",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Remove NY Times Cookies",
  "page_action": {
    "default_icon": "icon.gif",
    "default_title": "Remove NY Times Cookies",
    "default_popup": "popup.html"
  },
  "background": { "scripts": ["background.js"] },
  "permissions": [
    "tabs",
    "cookies",
    "*://*.nytimes.com/"
  ]
}